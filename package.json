{
  "name": "dapp-boilerplate",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:next": "next dev -p 8080",
    "dev:path": "pathpida -p .gitignore -w -o src/libs ",
    "contract:run": "hardhat run src/scripts/run.js",
    "contract:deploy": "hardhat run src/scripts/deploy.js --network rinkeby",
    "build": "pathpida -p .gitignore && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write",
    "check:types": "tsc --noEmit -p tsconfig.json",
    "postinstall": "npx simple-git-hooks"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "commit-msg": "npx commitlint --edit $1",
    "pre-push": "yarn tsc"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.1",
    "@heroicons/react": "^1.0.4",
    "@tailwindcss/forms": "^0.4.0",
    "classnames": "^2.3.1",
    "date-fns": "^2.25.0",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-hot-toast": "^2.2.0",
    "spinners-react": "^1.0.6",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@metamask/providers": "^8.1.1",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@tailwindcss/line-clamp": "^0.3.1",
    "@trivago/prettier-plugin-sort-imports": "^2.0.4",
    "@typechain/ethers-v5": "^9.0.0",
    "@typechain/hardhat": "^5.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@types/react": "17.0.29",
    "@types/uuid": "^8.3.1",
    "autoprefixer": "^10.3.7",
    "chai": "^4.3.6",
    "child_process": "^1.0.2",
    "dotenv": "^16.0.0",
    "eslint": "7.32.0",
    "eslint-config-next": "11.1.2",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-unused-imports": "^1.1.5",
    "ethereum-waffle": "^4.0.0-alpha.0",
    "ethers": "^5.6.0",
    "hardhat": "^2.9.1",
    "lint-staged": "^11.2.3",
    "npm-run-all": "^4.1.5",
    "pathpida": "^0.17.0",
    "postcss": "^8.3.9",
    "prettier": "^2.4.1",
    "simple-git-hooks": "^2.6.1",
    "tailwindcss": "^2.2.16",
    "typescript": "4.4.4"
  }
}
